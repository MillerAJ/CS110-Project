
import GameWindow
import FighterClass
from FighterClass import fighter
import sys
import pyganim
import pygame
pygame.init()


#(width, height) = 1000, 600
#ClearScreen(screen)

pygame.key.set_repeat(0,1000)

        
    
def main():
    
    FighterA = fighter("Stick Man",150,"FighterA.png",1.5,1.0)
    FighterA.drawPlayer()
    running=True
    
    animCtr=0
    while running == True:
        
        pygame.display.flip()

        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False
                
    

        keys = pygame.key.get_pressed()
        if keys[pygame.K_d]:
            FighterA.moveRight()
        if keys[pygame.K_a]:
            FighterA.moveLeft()
            
        if animCtr%450== 0:
            FighterA.idleAnimA()

        animCtr += 1
    


    pygame.quit()

main()




